mixin icon-button(props = {})
  include button-counter

  - const { tag = 'button', size, color, iconId, counter } = props;
  -
    const rootClassList = [
      size && `button_size_${size}`,
      color && `button_color_${color}`,
    ];

  #{tag}.icon-button(class= rootClassList)&attributes(attributes)
    svg.icon-button__icon
      use(xlink:href=`#${iconId}`)
    if counter
      +button-counter= counter
